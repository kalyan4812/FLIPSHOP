<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7EAF3"
    tools:context=".admin.activity.AdminDashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:elevation="5dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="14dp"
            app:cardMaxElevation="7dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TableRow android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:padding="10dp"
                        android:text="Category"
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp">


                    <Button
                        android:id="@+id/cat1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_column="1"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_add_to_photos_black_24dp"
                        android:onClick="openAdminCatAdd" />

                    <Button
                        android:id="@+id/cat2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_column="2"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_delete_forever_black_24dp"
                        android:onClick="categorydelete" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:text="Add"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:text="Delete"
                        android:textColor="@android:color/black" />


                </TableRow>
            </TableLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:elevation="5dp"
            app:cardBackgroundColor="#7FEDE3"
            app:cardCornerRadius="14dp"
            app:cardMaxElevation="7dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TableRow android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:padding="10dp"
                        android:text="Products"
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp">


                    <Button
                        android:id="@+id/pro1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_column="1"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_add_to_photos_black_24dp"
                        android:onClick="productadd" />

                    <Button
                        android:id="@+id/pro2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_column="2"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_delete_forever_black_24dp"
                        android:onClick="productdelete" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:text="Add"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:text="Delete"
                        android:textColor="@android:color/black" />

                </TableRow>
            </TableLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:elevation="5dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="14dp"
            app:cardMaxElevation="7dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TableRow android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:padding="10dp"
                        android:text="ADDS"
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp">


                    <Button
                        android:id="@+id/addADD"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_column="1"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_add_to_photos_black_24dp"
                        android:onClick="openAdminAddadd" />

                    <Button
                        android:id="@+id/deleteADD"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_column="2"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_delete_forever_black_24dp"
                        android:onClick="adddelete" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:text="Add"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:text="Delete All"
                        android:textColor="@android:color/black" />


                </TableRow>
            </TableLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:elevation="5dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="14dp"
            app:cardMaxElevation="7dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:onClick="orderrequests"
                android:padding="10dp"
                android:text="ORDER REQUESTS"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp" />


    </LinearLayout>

</ScrollView>